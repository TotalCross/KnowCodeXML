<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_form"
        tools:context=".Activity.LoginActivity">


    <EditText
            android:id="@+id/nomeCompleto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#F00"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textShortMessage|textPersonName"
            android:padding="8dp"
            android:text="Nome Completo"
            app:layout_constraintBottom_toTopOf="@+id/nomeEmpresa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCadastro"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />

    <EditText
            android:id="@+id/nomeEmpresa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:textColor="#081B86"
            android:hint="Nome da Empresa"
            android:inputType="textShortMessage"
            android:padding="8dp"
            android:text="Nome da Empresa"
            app:layout_constraintBottom_toTopOf="@+id/CNPJ"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeCompleto"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />
    <EditText
            android:id="@+id/CNPJ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="CNPJ"
            android:textColor="#FFE800"
            android:inputType="textShortMessage|numberDecimal"
            android:padding="8dp"
            android:text="CNPJ"
            app:layout_constraintBottom_toTopOf="@+id/emailCadastro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeEmpresa"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />

    <EditText
            android:id="@+id/emailCadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#FF5722"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textShortMessage|textEmailAddress"
            android:padding="8dp"
            android:text="E-mail"
            app:layout_constraintBottom_toTopOf="@+id/nascimentoCadastro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CNPJ"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />



    <EditText
            android:id="@+id/nascimentoCadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Data de Nascimento"
            android:inputType="textShortMessage|numberDecimal"
            android:padding="8dp"
            android:text="Data de Nascimento"
            app:layout_constraintBottom_toTopOf="@+id/senhaCadastro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailCadastro"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />




    <EditText
            android:id="@+id/senhaCadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="senha"
            android:inputType="textPersonName|textPassword"
            android:padding="8dp"
            android:text="Senha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nascimentoCadastro"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />

    <Button
            android:id="@+id/buttonCadastro"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="Registrar"
            app:layout_constraintBottom_toTopOf="@+id/progressCadastro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/senhaCadastro"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />

    <ProgressBar
            android:id="@+id/progressCadastro"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCadastro"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_optimizationLevel="chains" />

</androidx.constraintlayout.widget.ConstraintLayout>